{% liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif

  assign sizes = '100vw'
  assign widths = '375, 750, 1100, 1500, 1780, 2000, 3000, 3840'
%}

<section 
  id="DirtPrepHero-{{ section.id }}" 
  class="dirtprep-hero color-{{ section.settings.color_scheme }}"
  style="
    --hero-min-height: {{ section.settings.section_height }}vh;
    --hero-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    --hero-content-max-width: {{ section.settings.content_max_width }}px;
  "
>
  {% if section.settings.background_image != blank %}
    <div class="dirtprep-hero__background">
      {{
        section.settings.background_image
        | image_url: width: 3840
        | image_tag:
          loading: 'lazy',
          fetchpriority: fetch_priority,
          width: section.settings.background_image.width,
          height: section.settings.background_image.height,
          class: 'dirtprep-hero__image',
          sizes: sizes,
          widths: widths,
          alt: section.settings.background_image.alt
      }}
      {% if section.settings.show_overlay %}
        <div class="dirtprep-hero__overlay"></div>
      {% endif %}
    </div>
  {% endif %}

  <!-- Enhanced gradient overlay for text readability -->
  <div class="dirtprep-hero__text-overlay"></div>

  <div class="dirtprep-hero__container page-width">
    <div class="dirtprep-hero__content">
      {% if section.settings.logo != blank %}
        <div class="dirtprep-hero__logo">
          {{
            section.settings.logo
            | image_url: width: 300
            | image_tag:
              loading: 'lazy',
              width: section.settings.logo.width,
              height: section.settings.logo.height,
              alt: section.settings.logo.alt | default: shop.name,
              style: 'max-width: ' | append: section.settings.logo_width | append: 'px;'
          }}
        </div>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h1 class="dirtprep-hero__heading">
          {{ section.settings.heading }}
        </h1>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <div class="dirtprep-hero__subheading">
          {{ section.settings.subheading }}
        </div>
      {% endif %}

      <div class="dirtprep-hero__buttons">
        {% if section.settings.button_1_text != blank %}
          <a 
            href="{{ section.settings.button_1_link | default: '#' }}" 
            class="dirtprep-hero__button dirtprep-hero__button--primary"
            {% if section.settings.button_1_new_tab %}target="_blank" rel="noopener"{% endif %}
          >
            <span class="dirtprep-hero__button-text">{{ section.settings.button_1_text }}</span>
            <span class="dirtprep-hero__button-icon">→</span>
          </a>
        {% endif %}

        {% if section.settings.button_2_text != blank %}
          <a 
            href="{{ section.settings.button_2_link | default: '#' }}" 
            class="dirtprep-hero__button dirtprep-hero__button--secondary"
            {% if section.settings.button_2_new_tab %}target="_blank" rel="noopener"{% endif %}
          >
            <span class="dirtprep-hero__button-text">{{ section.settings.button_2_text }}</span>
            <span class="dirtprep-hero__button-icon">→</span>
          </a>
        {% endif %}
      </div>

      <!-- Trust Bar Section -->
      {% if section.settings.show_trust_bar %}
        <div class="dirtprep-hero__trust-bar">
          <div class="dirtprep-hero__trust-text">
            {{ section.settings.trust_text | default: 'Official Leica Geosystems Distributor & Technology Partner' }}
          </div>
          <div class="dirtprep-hero__partner-logos">
            {% if section.settings.leica_logo != blank %}
              <div class="dirtprep-hero__partner-logo">
                {{
                  section.settings.leica_logo
                  | image_url: width: 150
                  | image_tag:
                    loading: 'lazy',
                    alt: 'Leica Geosystems Partner',
                    class: 'dirtprep-hero__logo-img'
                }}
              </div>
            {% endif %}
            {% if section.settings.agtek_logo != blank %}
              <div class="dirtprep-hero__partner-logo">
                {{
                  section.settings.agtek_logo
                  | image_url: width: 150
                  | image_tag:
                    loading: 'lazy',
                    alt: 'AGTEK Partner',
                    class: 'dirtprep-hero__logo-img'
                }}
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  :root {
    --dirtprep-red: #e31e24;
    --dirtprep-red-dark: #c41e3a;
    --dirtprep-red-light: #ff4757;
    --dirtprep-white: #ffffff;
    --dirtprep-gray-light: #f8f9fa;
    --dirtprep-gray: #6c757d;
    --dirtprep-dark: #2c3e50;
  }

  .dirtprep-hero {
    position: relative;
    min-height: var(--hero-min-height);
    display: flex;
    align-items: center;
    overflow: hidden;
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  }

  .dirtprep-hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .dirtprep-hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 70% center; /* Position machinery on right side */
  }

  .dirtprep-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, 
      rgba(227, 30, 36, var(--hero-overlay-opacity)) 0%, 
      rgba(44, 62, 80, calc(var(--hero-overlay-opacity) + 0.1)) 100%);
    z-index: 1;
  }

  /* Enhanced text overlay for better readability */
  .dirtprep-hero__text-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 55%;
    height: 100%;
    background: linear-gradient(
      90deg,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.6) 40%,
      rgba(0, 0, 0, 0.3) 70%,
      transparent 100%
    );
    z-index: 2;
  }

  .dirtprep-hero__container {
    position: relative;
    z-index: 3;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
  }

  .dirtprep-hero__content {
    max-width: var(--hero-content-max-width);
    width: 45%; /* Asymmetrical layout - left side for content */
    position: relative;
    padding-left: 2rem;
  }

  .dirtprep-hero__content::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 4px;
    height: 120px;
    background: linear-gradient(to bottom, var(--dirtprep-red), var(--dirtprep-red-light));
    border-radius: 2px;
  }

  .dirtprep-hero__logo {
    margin-bottom: 2rem;
    animation: slideInLeft 1s ease-out;
  }

  .dirtprep-hero__logo img {
    height: auto;
    display: block;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
  }

  .dirtprep-hero__heading {
    font-size: clamp(2.8rem, 7vw, 5.5rem);
    font-weight: 900;
    line-height: 1.05;
    margin: 0 0 1.2rem 0;
    color: var(--dirtprep-white);
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
    animation: slideInUp 1s ease-out 0.2s both;
    position: relative;
    letter-spacing: -0.02em;
  }

  .dirtprep-hero__heading::after {
    content: '';
    position: absolute;
    bottom: -15px;
    left: 0;
    width: 80px;
    height: 5px;
    background: linear-gradient(90deg, var(--dirtprep-red), var(--dirtprep-red-light));
    border-radius: 3px;
    box-shadow: 0 2px 8px rgba(227, 30, 36, 0.4);
  }

  .dirtprep-hero__subheading {
    font-size: clamp(1.1rem, 2.5vw, 1.4rem);
    font-weight: 400;
    line-height: 1.5;
    margin: 0 0 2.5rem 0;
    color: rgba(255, 255, 255, 0.9);
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
    animation: slideInUp 1s ease-out 0.4s both;
    max-width: 85%;
  }

  .dirtprep-hero__buttons {
    display: flex;
    gap: 1.25rem;
    flex-wrap: wrap;
    animation: slideInUp 1s ease-out 0.6s both;
    margin-bottom: 3rem;
  }

  .dirtprep-hero__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1.25rem 2.75rem;
    font-size: 1.05rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.1);
    border: 2px solid transparent;
    cursor: pointer;
    min-width: 200px;
    text-align: center;
    position: relative;
    overflow: hidden;
    letter-spacing: 0.02em;
  }

  .dirtprep-hero__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.15), transparent);
    transition: left 0.5s;
  }

  .dirtprep-hero__button:hover::before {
    left: 100%;
  }

  .dirtprep-hero__button-text {
    flex: 1;
  }

  .dirtprep-hero__button-icon {
    margin-left: 0.75rem;
    transition: transform 0.3s ease;
    font-size: 1.1rem;
    font-weight: bold;
  }

  .dirtprep-hero__button:hover .dirtprep-hero__button-icon {
    transform: translateX(4px);
  }

  .dirtprep-hero__button--primary {
    background: linear-gradient(135deg, var(--dirtprep-red) 0%, var(--dirtprep-red-light) 100%);
    color: var(--dirtprep-white);
    border-color: var(--dirtprep-red);
    box-shadow: 0 6px 20px rgba(227, 30, 36, 0.25);
  }

  .dirtprep-hero__button--primary:hover {
    background: linear-gradient(135deg, var(--dirtprep-red-dark) 0%, var(--dirtprep-red) 100%);
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(227, 30, 36, 0.35);
  }

  .dirtprep-hero__button--secondary {
    background: transparent;
    color: var(--dirtprep-white);
    border-color: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .dirtprep-hero__button--secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--dirtprep-white);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(255, 255, 255, 0.15);
  }

  /* Trust Bar Styles */
  .dirtprep-hero__trust-bar {
    margin-top: 1rem;
    animation: slideInUp 1s ease-out 0.8s both;
  }

  .dirtprep-hero__trust-text {
    font-size: 0.9rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .dirtprep-hero__partner-logos {
    display: flex;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .dirtprep-hero__partner-logo {
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .dirtprep-hero__partner-logo:hover {
    opacity: 1;
  }

  .dirtprep-hero__logo-img {
    height: 32px;
    width: auto;
    filter: brightness(0) invert(1);
    max-width: 120px;
  }

  @keyframes slideInLeft {
    from { opacity: 0; transform: translateX(-50px); }
    to { opacity: 1; transform: translateX(0); }
  }

  @keyframes slideInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Mobile Styles */
  @media screen and (max-width: 749px) {
    .dirtprep-hero {
      min-height: 80vh;
      text-align: center;
    }

    .dirtprep-hero__text-overlay {
      width: 100%;
      background: linear-gradient(
        180deg,
        transparent 0%,
        rgba(0, 0, 0, 0.3) 30%,
        rgba(0, 0, 0, 0.8) 70%,
        rgba(0, 0, 0, 0.9) 100%
      );
    }

    .dirtprep-hero__image {
      object-position: center top;
    }

    .dirtprep-hero__content {
      width: 100%;
      max-width: 100%;
      padding: 0 1.5rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .dirtprep-hero__content::before {
      display: none;
    }

    .dirtprep-hero__logo {
      margin-bottom: 1.5rem;
    }

    .dirtprep-hero__heading {
      margin-bottom: 1rem;
      font-size: clamp(2.2rem, 8vw, 3.5rem);
    }

    .dirtprep-hero__heading::after {
      left: 50%;
      transform: translateX(-50%);
    }

    .dirtprep-hero__subheading {
      margin-bottom: 2rem;
      max-width: 100%;
      font-size: clamp(1rem, 4vw, 1.2rem);
    }

    .dirtprep-hero__buttons {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      margin-bottom: 2rem;
    }

    .dirtprep-hero__button {
      width: 100%;
      max-width: 300px;
      min-width: auto;
    }

    .dirtprep-hero__trust-bar {
      margin-top: 1.5rem;
    }

    .dirtprep-hero__trust-text {
      font-size: 0.8rem;
      margin-bottom: 0.75rem;
    }

    .dirtprep-hero__partner-logos {
      justify-content: center;
      gap: 1.5rem;
    }

    .dirtprep-hero__logo-img {
      height: 28px;
      max-width: 100px;
    }
  }

  /* Tablet Styles */
  @media screen and (min-width: 750px) and (max-width: 1199px) {
    .dirtprep-hero__content {
      width: 50%;
      padding-left: 1.5rem;
    }

    .dirtprep-hero__text-overlay {
      width: 60%;
    }

    .dirtprep-hero__buttons {
      gap: 1rem;
    }

    .dirtprep-hero__button {
      min-width: 180px;
      padding: 1.1rem 2.25rem;
    }
  }

  /* Large Screen Optimizations */
  @media screen and (min-width: 1200px) {
    .dirtprep-hero__content {
      width: 42%;
      max-width: none;
      padding-left: 3rem;
    }

    .dirtprep-hero__text-overlay {
      width: 50%;
    }

    .dirtprep-hero__heading {
      font-size: clamp(3.5rem, 5vw, 6rem);
    }

    .dirtprep-hero__subheading {
      font-size: 1.3rem;
      max-width: 90%;
    }

    .dirtprep-hero__buttons {
      gap: 1.5rem;
    }

    .dirtprep-hero__partner-logos {
      gap: 2.5rem;
    }

    .dirtprep-hero__logo-img {
      height: 36px;
      max-width: 140px;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .dirtprep-hero__button,
    .dirtprep-hero__logo,
    .dirtprep-hero__heading,
    .dirtprep-hero__subheading,
    .dirtprep-hero__buttons,
    .dirtprep-hero__trust-bar {
      animation: none;
    }

    .dirtprep-hero__button:hover {
      transform: none;
    }

    .dirtprep-hero__button::before {
      display: none;
    }
  }

  /* High Contrast Mode */
  @media (prefers-contrast: high) {
    .dirtprep-hero__button {
      border-width: 3px;
    }

    .dirtprep-hero__text-overlay {
      background: rgba(0, 0, 0, 0.9);
    }

    .dirtprep-hero__overlay {
      background: rgba(0, 0, 0, 0.8);
    }

    .dirtprep-hero__trust-text {
      color: var(--dirtprep-white);
    }
  }

  /* Dark Mode Support */
  @media (prefers-color-scheme: dark) {
    .dirtprep-hero {
      background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
    }
  }
{% endstylesheet %}

