{% liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif

  assign sizes = '100vw'
  assign widths = '375, 750, 1100, 1500, 1780, 2000, 3000, 3840'
%}

<section 
  id="DirtPrepHero-{{ section.id }}" 
  class="dirtprep-hero color-{{ section.settings.color_scheme }}"
  style="
    --hero-min-height: {{ section.settings.section_height }}vh;
    --hero-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    --hero-content-max-width: {{ section.settings.content_max_width }}px;
  "
>
  {% if section.settings.background_image != blank %}
    <div class="dirtprep-hero__background">
      {{
        section.settings.background_image
        | image_url: width: 3840
        | image_tag:
          loading: 'lazy',
          fetchpriority: fetch_priority,
          width: section.settings.background_image.width,
          height: section.settings.background_image.height,
          class: 'dirtprep-hero__image',
          sizes: sizes,
          widths: widths,
          alt: section.settings.background_image.alt
      }}
      {% if section.settings.show_overlay %}
        <div class="dirtprep-hero__overlay"></div>
      {% endif %}
    </div>
  {% endif %}

  <div class="dirtprep-hero__container page-width">
    <div class="dirtprep-hero__content">
      {% if section.settings.logo != blank %}
        <div class="dirtprep-hero__logo">
          {{
            section.settings.logo
            | image_url: width: 300
            | image_tag:
              loading: 'lazy',
              width: section.settings.logo.width,
              height: section.settings.logo.height,
              alt: section.settings.logo.alt | default: shop.name,
              style: 'max-width: ' | append: section.settings.logo_width | append: 'px;'
          }}
        </div>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h1 class="dirtprep-hero__heading">
          {{ section.settings.heading }}
        </h1>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <div class="dirtprep-hero__subheading">
          {{ section.settings.subheading }}
        </div>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="dirtprep-hero__description">
          {{ section.settings.description }}
        </div>
      {% endif %}

      <div class="dirtprep-hero__buttons">
        {% if section.settings.button_1_text != blank %}
          <a 
            href="{{ section.settings.button_1_link | default: '#' }}" 
            class="dirtprep-hero__button dirtprep-hero__button--primary"
            {% if section.settings.button_1_new_tab %}target="_blank" rel="noopener"{% endif %}
          >
            {{ section.settings.button_1_text }}
          </a>
        {% endif %}

        {% if section.settings.button_2_text != blank %}
          <a 
            href="{{ section.settings.button_2_link | default: '#' }}" 
            class="dirtprep-hero__button dirtprep-hero__button--secondary"
            {% if section.settings.button_2_new_tab %}target="_blank" rel="noopener"{% endif %}
          >
            {{ section.settings.button_2_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .dirtprep-hero {
    position: relative;
    min-height: var(--hero-min-height);
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .dirtprep-hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .dirtprep-hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .dirtprep-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, var(--hero-overlay-opacity));
    z-index: 1;
  }

  .dirtprep-hero__container {
    position: relative;
    z-index: 2;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
  }

  .dirtprep-hero__content {
    max-width: var(--hero-content-max-width);
    width: 100%;
  }

  .dirtprep-hero__logo {
    margin-bottom: 2rem;
  }

  .dirtprep-hero__logo img {
    height: auto;
    display: block;
  }

  .dirtprep-hero__heading {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 700;
    line-height: 1.1;
    margin: 0 0 1.5rem 0;
    color: rgb(var(--color-foreground-heading));
  }

  .dirtprep-hero__subheading {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    font-weight: 600;
    line-height: 1.3;
    margin: 0 0 1rem 0;
    color: rgb(var(--color-foreground));
  }

  .dirtprep-hero__description {
    font-size: clamp(1rem, 2vw, 1.25rem);
    line-height: 1.5;
    margin: 0 0 2.5rem 0;
    color: rgb(var(--color-foreground));
    max-width: 50ch;
  }

  .dirtprep-hero__buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .dirtprep-hero__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    cursor: pointer;
    min-width: 140px;
    text-align: center;
  }

  .dirtprep-hero__button--primary {
    background-color: rgb(var(--color-primary-button-background));
    color: rgb(var(--color-primary-button-text));
    border-color: rgb(var(--color-primary-button-background));
  }

  .dirtprep-hero__button--primary:hover {
    background-color: rgb(var(--color-primary-button-hover-background));
    color: rgb(var(--color-primary-button-hover-text));
    border-color: rgb(var(--color-primary-button-hover-background));
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .dirtprep-hero__button--secondary {
    background-color: rgb(var(--color-secondary-button-background));
    color: rgb(var(--color-secondary-button-text));
    border-color: rgb(var(--color-secondary-button-border));
  }

  .dirtprep-hero__button--secondary:hover {
    background-color: rgb(var(--color-secondary-button-hover-background));
    color: rgb(var(--color-secondary-button-hover-text));
    border-color: rgb(var(--color-secondary-button-hover-border));
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  /* Mobile Styles */
  @media screen and (max-width: 749px) {
    .dirtprep-hero {
      min-height: 70vh;
      text-align: center;
    }

    .dirtprep-hero__content {
      max-width: 100%;
      padding: 0 1rem;
    }

    .dirtprep-hero__logo {
      margin-bottom: 1.5rem;
    }

    .dirtprep-hero__heading {
      margin-bottom: 1rem;
    }

    .dirtprep-hero__subheading {
      margin-bottom: 1rem;
    }

    .dirtprep-hero__description {
      margin-bottom: 2rem;
      max-width: 100%;
    }

    .dirtprep-hero__buttons {
      flex-direction: column;
      align-items: center;
      gap: 0.75rem;
    }

    .dirtprep-hero__button {
      width: 100%;
      max-width: 280px;
    }
  }

  /* Large Screen Optimizations */
  @media screen and (min-width: 1200px) {
    .dirtprep-hero__content {
      max-width: 60%;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .dirtprep-hero__button {
      transition: none;
    }

    .dirtprep-hero__button:hover {
      transform: none;
    }
  }

  /* High Contrast Mode */
  @media (prefers-contrast: high) {
    .dirtprep-hero__button {
      border-width: 3px;
    }
  }
{% endstylesheet %}

